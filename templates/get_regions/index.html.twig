{% extends 'baselayout.html.twig' %}

{% block title %}Nos régions{% endblock %}

{% block main %}
<h1 class="p-3 text-center">Découvrez nos magnifiques régions </h1>

<div class="card-columns">
{% for region in regions %}
<div class="m-3 card" style="width: 18rem;">
  {#<img src="..." class="card-img-top" alt="Image cap">#}
  <div class="card-body">
    <h5 class="card-title">{{region.name}} ({{region.country}}) </h5>
    <p class="card-text">{{region.presentation}}</p>
    <a href="/region/{{region.id}}" class="btn btn-primary">Nos offres d'hébergement</a>
  </div>
</div>
{% endfor %}
</div>
{% endblock %}
