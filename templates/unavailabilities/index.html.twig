{% extends 'base.html.twig' %}

{% block title %}Unavailabilities index{% endblock %}

{% block body %}
    <h1>Unavailabilities index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dates</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for unavailability in unavailabilities %}
            <tr>
                <td>{{ unavailability.id }}</td>
                <td>{{ unavailability.dates ? unavailability.dates|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('unavailabilities_show', {'id': unavailability.id}) }}">show</a>
                    <a href="{{ path('unavailabilities_edit', {'id': unavailability.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('unavailabilities_new') }}">Create new</a>
{% endblock %}
