{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block main %}
    <h1>Reservation</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Chambre</th>
                <td>{{ reservation.room.summary }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ reservation.dateDebut ? reservation.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ reservation.dateFin ? reservation.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reservation_index') }}">Retour à mes réservations</a>

    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">modifier</a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
